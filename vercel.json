{
  "version": 2,
  "buildCommand": "cd frontend && npm ci && npm run build",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/tasks(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/health(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.13"
  }
}